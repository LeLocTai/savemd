{
  "private": true,
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {
      "optimize": false,
      "sourceMap": false
    }
  },
  "scripts": {
    "build": "parcel build src/manifest.json --no-content-hash --no-cache --detailed-report 0 --target webext-prod && web-ext build -o --sourceDir dist/webext-prod/",
    "watch": "parcel watch src/manifest.json --no-cache --no-hmr --target webext-dev",
    "webext:run": "node scripts/webextrun.js",
    "dev": "run-p watch webext:run",
    "sign": "node scripts/webextsign.js",
    "zip-source": "git ls-files | tar Tzcf - web-ext-artifacts/source.tgz",
    "pack": "npm run build && npm run zip-source"
  },
  "browserslist": [
    "last 1 Chrome version"
  ],
  "dependencies": {
    "@joplin/turndown": "4.0.56",
    "@joplin/turndown-plugin-gfm": "1.0.38",
    "@mozilla/readability": "0.4.1",
    "@spectrum-web-components/bundle": "0.22.8",
    "@webcomponents/webcomponentsjs": "2.6.0",
    "lit": "2.0.0-rc.4",
    "lodash": "4.17.21",
    "path-browserify": "1.0.1",
    "sanitize-filename": "1.6.3",
    "webext-options-sync": "2.0.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/plugin-proposal-decorators": "7.15.4",
    "@babel/plugin-syntax-typescript": "7.14.5",
    "@parcel/config-webextension": "2.0.0-rc.0",
    "@parcel/transformer-image": "2.0.0-rc.0",
    "@types/lodash": "4.14.173",
    "@types/webextension-polyfill": "0.8.0",
    "babel-plugin-lit-property-types-from-ts": "1.1.3",
    "dotenv": "10.0.0",
    "npm-run-all": "4.1.5",
    "parcel": "2.0.1",
    "typescript": "4.4.3",
    "web-ext": "6.4.0",
    "webextension-polyfill": "0.8.0"
  }
}