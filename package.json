{
  "private": true,
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  },
  "scripts": {
    "build": "parcel build src/manifest.json --no-content-hash --no-source-maps --dist-dir dist --no-cache --detailed-report 0 --target webext-prod",
    "watch": "parcel watch src/manifest.json --dist-dir dist --no-cache --no-hmr --target webext-dev",
    "webext:run": "node scripts/webextrun.js",
    "dev": "run-p watch webext:run"
  },
  "browserslist": [
    "last 2 Chrome version",
    "last 2 Firefox version"
  ],
  "dependencies": {
    "@joplin/turndown": "^4.0.56",
    "@joplin/turndown-plugin-gfm": "^1.0.38",
    "webext-options-sync": "^2.0.1",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.0-rc.0",
    "@parcel/transformer-image": "^2.0.0-rc.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-rc.0",
    "typescript": "^4.4.3",
    "web-ext": "^6.4.0"
  },
  "webExt": {
    "sourceDir": "dist"
  }
}